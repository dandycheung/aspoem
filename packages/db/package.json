{
  "name": "@aspoem/db",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "generate": "pnpm with-env prisma generate",
    "push": "pnpm with-env prisma db push --skip-generate",
    "studio": "pnpm with-env prisma studio --port 5556",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0"
  },
  "devDependencies": {
    "@aspoem/eslint-config": "workspace:*",
    "@aspoem/prettier-config": "workspace:*",
    "@aspoem/tsconfig": "workspace:*",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "prisma": "^5.13.0",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@aspoem/eslint-config/base"
    ]
  },
  "prettier": "@aspoem/prettier-config"
}
